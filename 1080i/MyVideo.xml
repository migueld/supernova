            <label>36000</label>

            <visible>true</visible>
            <enable>Control.IsVisible(3002)</enable>
            <onclick>ReplaceWindow(6)</onclick>
            <onup>56</onup>
            <ondown>56</ondown>
            <onleft>3000</onleft>
            <onright>3000</onright>
        </control>

