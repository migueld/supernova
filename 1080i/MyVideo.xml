                <font>font-module-menu-breadcrumb</font>
                <textcolor>breadcrumb-text</textcolor>
                <disabledcolor>breadcrumb-text</disabledcolor>
                <textoffsetx>35</textoffsetx>
                <textoffsety>5</textoffsety>
                <pulseonselect>no</pulseonselect>
