    <include name="module-menu-spotlight">
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>Module-Menu/Spotlight.png</texture>
        </control>
    </include>

    <include name="module-menu-title-and-breadcrumb-background">
        <!-- Breadcrumb Background -->
        <control type="image">
            <animation effect="slide" time="400" delay="100" start="0,-30" end="0,0" tween="cubic">WindowOpen</animation>
            <posx>0</posx>
            <posy>102</posy>
            <width>1920</width>
            <height>50</height>
            <texture>Module-Menu/Breadcrumb-Background.png</texture>
        </control>

        <!-- Title background -->
        <control type="image">
            <animation type="WindowOpen">
                <effect type="fade" time="100" delay="0" start="0" end="100" />
                <effect type="slide" time="300" delay="0" start="0,-10" end="0,0" tween="cubic"/>
            </animation>
            <posx>0</posx>
            <posy>12</posy>
            <width>1920</width>
            <height>89</height>
            <texture>Module-Menu/Title-Background.png</texture>
        </control>
    </include>

    <include name="module-menu-title-edging-overlay">
        <control type="image">
            <animation type="WindowOpen">
                <effect type="fade" time="100" delay="0" start="0" end="100" />
                <effect type="slide" time="300" delay="0" start="0,-10" end="0,0" tween="cubic"/>
            </animation>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>101</height>
            <texture>Module-Menu/Title-Edging.png</texture>
        </control>
    </include>

    <include name="module-menu-title-animation">
        <animation type="WindowOpen">
            <effect type="fade" time="100" delay="150" start="0" end="100" />
            <effect type="slide" time="300" delay="150" start="-50,0" end="0,0" tween="cubic"/>
        </animation>
    </include>

    <include name="module-menu-title-headline">
        <posx>43</posx>
        <posy>-22</posy>
        <height>89</height>
        <width>1977</width>
        <aligny>bottom</aligny>
        <textcolor>color-module-menu-title</textcolor>
        <font>font-module-menu-title</font>
    </include>

    <include name="module-menu-breadcrumb-button">
        <posy>102</posy>
        <width>308</width>
        <height>50</height>
        <visible>true</visible>
        <texturefocus>Module-Menu/Breadcrumb-Button-Selected.png</texturefocus>
        <texturenofocus>Module-Menu/Breadcrumb-Button-Normal.png</texturenofocus>
        <font>font-module-menu-breadcrumb</font>
        <textcolor>color-module-menu-breadcrumb</textcolor>
        <disabledcolor>color-module-menu-breadcrumb</disabledcolor>
        <textoffsetx>40</textoffsetx>
        <textoffsety>6</textoffsety>
        <pulseonselect>no</pulseonselect>
    </include>

    <include name="module-menu-breadcrumb-home-button">
        <control type="group">
            <animation effect="slide" tween="cubic" time="600" delay="200" start="-308,0" end="0,0" acceleration="+1.5">WindowOpen</animation>
            <posx>0</posx>
            <posy>102</posy>
            <width>308</width>
            <height>50</height>
            <control type="button" id="3000">
                <posx>0</posx>
                <posy>0</posy>
                <width>308</width>
                <height>50</height>
                <visible>true</visible>
                <texturefocus>Module-Menu/Breadcrumb-Button-Selected.png</texturefocus>
                <texturenofocus>Module-Menu/Breadcrumb-Button-Normal.png</texturenofocus>
                <label>36007</label>
                <font>font-module-menu-breadcrumb</font>
                <textcolor>color-module-menu-breadcrumb</textcolor>
                <disabledcolor>color-module-menu-breadcrumb</disabledcolor>
                <textoffsetx>68</textoffsetx>
                <textoffsety>6</textoffsety>
                <pulseonselect>no</pulseonselect>
                <onclick>ReplaceWindow(0)</onclick>
                <onleft>3001</onleft>
                <onright>3001</onright>
                <onup>4002</onup>
                <ondown>56</ondown>
                <enable>Control.IsVisible(3001)</enable>
            </control>
            <control type="image">
                <posx>24</posx>
                <posy>8</posy>
                <width>26</width>
                <height>27</height>
                <texture>Icons/Breadcrumb-Home.png</texture>
            </control>
        </control>
