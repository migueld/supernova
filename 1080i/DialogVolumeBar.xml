        <control type="group">
            <include>osd-menu-noninteractive-background</include>

            <!-- Icons -->
            <!-- Minimum Volume -->
            <control type="image">
                <posx>123</posx>
                <posy>39</posy>
                <width>100</width>
                <height>100</height>
                <texture>Icons/OSD-Menu-Volume-Min.png</texture>
            </control>

            <!-- Maximum Volume -->
            <control type="image">
                <posx>1697</posx>
                <posy>39</posy>
                <width>100</width>
                <height>100</height>
                <texture>Icons/OSD-Menu-Volume-Max.png</texture>
            </control>

            <!-- Volume Level Progress -->
            <control type="progress">
                <info>Player.Volume</info>
            </control>
        </control>
    </controls>
</window>
