<?xml version="1.0"?>
<window id="0">
    <defaultcontrol always="false">5</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>

        <!-- Main User Interface Start -->
        <!-- Background stage floor -->
        <control type="image">
            <description>Stage floor</description>
            <posx>-4</posx>
            <posy>0</posy>
            <width>728</width>
            <height>590</height>
            <aspectratio/>
            <texture>StageFloor16x9.png</texture>
        </control>
        
        <!-- Hidden Elements Start -->
        <!-- Main controller that drives the main display, this control is hidden -->
        <control type="wraplist" id="5">
            <onup>5</onup>
            <ondown>5</ondown>
            <orientation>horizontal</orientation>
            <focusposition>2</focusposition>
            <posx>-145</posx>
            <posy>150</posy>
            <width>900</width>
            <height>265</height>
            <itemlayout width="200" height="400">
                <control type="image">
                    <width>200</width>
                    <height>400</height>
                    <info>ListItem.Icon</info>
                </control>
            </itemlayout>
            <focusedlayout width="200" height="400">
                <control type="image">
                    <width>200</width>
                    <height>400</height>
                    <info>ListItem.Icon</info>
                </control>
            </focusedlayout>
            <!-- Control elements -->
            <content>
                <item>
                    <!-- Reload Skin -->
                    <label>20183</label>
                    <onclick>XBMC.ReloadSkin()</onclick>
                </item>
                <item>
                    <!-- My Pictures -->
                    <icon>Icons/MainMenu-Photo.png</icon>
                    <thumb>Icons/MainMenu-Photo.png</thumb>
                    <label>1</label>
                    <onclick>ActivateWindow(MyPictures)</onclick>
                </item>
                <item>
                    <!-- My Music -->
                    <icon>Icons/MainMenu-Music.png</icon>
                    <thumb>Icons/MainMenu-Music.png</thumb>
                    <label>2</label>
                    <onclick>ActivateWindow(MyMusic)</onclick>
                </item>
                <item>
                    <!-- My Videos -->
                    <icon>Icons/MainMenu-Movies.png</icon>
                    <thumb>Icons/MainMenu-Movies.png</thumb>
                    <label>3</label>
                    <onclick>ActivateWindow(MyVideo)</onclick>
                </item>
                <item>
                    <!-- My Videos -->
                    <icon>Icons/MainMenu-TV.png</icon>
                    <thumb>Icons/MainMenu-TV.png</thumb>
                    <label>4</label>
                    <onclick>ActivateWindow(MyVideo)</onclick>
                </item>
                <item>
                    <!-- Settings -->
                    <icon>Icons/MainMenu-Preferences.png</icon>
                    <thumb>Icons/MainMenu-Preferences.png</thumb>
                    <label>5</label>
                    <onclick>ActivateWindow(Settings)</onclick>
                </item>
                <item>
                    <!-- DVD -->
                    <icon>Icons/MainMenu-DVDDisc.png</icon>
                    <thumb>Icons/MainMenu-DVDDisc.png</thumb>
                    <label>31009</label>
                    <onclick>XBMC.PlayDVD</onclick>
                    <visible>System.HasMediaDVD</visible>
                </item>
            </content>
        </control>
        <!-- Hidden elements End -->

        <!-- Spot light overlay -->
        <control type="image">
            <description>Spot light overlay</description>
            <posx>-4</posx>
            <posy>0</posy>
            <width>724</width>
            <height>576</height>
            <aspectratio/>
            <texture>Spotlight16x9.png</texture>
        </control>

        <!-- Currently selected item's label -->
        <control type="label">
            <posx>0</posx>
            <posy>40</posy>
            <width>720</width>
            <height>40</height>
            <info>Container(5).ListItem.Label</info>
            <align>center</align>
            <aligny>center</aligny>
            <font>font20</font>
            <textcolor>button-text</textcolor>
        </control>

        <!-- Status bar background -->
        <control type="image">
            <posx>-4</posx>
            <posy>461</posy>
            <width>728</width>
            <height>63</height>
            <aspectratio>keep</aspectratio>
            <texture>Main-Page-Satusbar-Background.png</texture>
        </control>
        
        <!-- RSS Scrolling Feed -->
        <control type="group">
            <!-- RSS Feed -->
    		<control type="rss">
    			<description>rss feed</description>
    			<posx>0</posx>
    			<posy>540</posy>
    			<width>720</width>
    			<font>font12</font>
    			<urlset>1</urlset>
    			<textcolor>info-text</textcolor>
    			<titlecolor>rss-title-text</titlecolor>
    			<headlinecolor>rss-headline-text</headlinecolor>
    		</control>
    		
    		<!-- RSS Spotlight -->
    		<control type="image">
    		    <posx>0</posx>
    		    <posy>524</posy>
    		    <width>720</width>
    		    <height>54</height>
    		    <aspectratio>keep</aspectratio>
    		    <texture>Main-Page-RSS-Spotlight.png</texture>
		    </control>
		</control>
        <!-- Main User Interface End -->
    </controls>
</window>
