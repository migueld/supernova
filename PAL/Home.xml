<?xml version="1.0"?>
<window id="0">
    <defaultcontrol always="false">5</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <!-- Hidden Elements Start -->
        <!-- Main controller that drives the main display, this control is hidden -->
        <control type="fixedlist" id="5">
            <visible allowhiddenfocus="true">no</visible>
            <onleft>5</onleft>
            <onright>5</onright>
            <onup>5</onup>
            <ondown>5</ondown>
            <orientation>horizontal</orientation>
            <focusposition>2</focusposition>
            <itemlayout width="166" height="33">
                <control type="label">
                    <info>ListItem.label</info>
                </control>
            </itemlayout>
            <focusedlayout width="166" height="40">
                <control type="label">
                    <info>ListItem.label</info>
                </control>
            </focusedlayout>
            <!-- Control elements -->
            <content>
                <item>
                    <!-- Reload Skin -->
                    <label>20183</label>
                    <onclick>XBMC.ReloadSkin()</onclick>
                </item>
                <item>
                    <!-- My Pictures -->
                    <icon>Icons/Photo.png</icon>
                    <thumb>Icons/Photo.png</thumb>
                    <label>1</label>
                    <onclick>ActivateWindow(MyPictures)</onclick>
                </item>
                <item>
                    <!-- My Music -->
                    <icon>Icons/Music.png</icon>
                    <thumb>Icons/Music.png</thumb>
                    <label>2</label>
                    <onclick>ActivateWindow(MyMusic)</onclick>
                </item>
                <item>
                    <!-- My Videos -->
                    <icon>Icons/Movies.png</icon>
                    <thumb>Icons/Movies.png</thumb>
                    <label>3</label>
                    <onclick>ActivateWindow(MyVideo)</onclick>
                </item>
                <item>
                    <!-- Settings -->
                    <icon>Icons/MainMenu.png</icon>
                    <thumb>Icons/MainMenu.png</thumb>
                    <label>5</label>
                    <onclick>ActivateWindow(Settings)</onclick>
                </item>
                <item>
                    <!-- DVD -->
                    <icon>Icons/DVDDisc.png</icon>
                    <thumb>Icons/DVDDisc.png</thumb>
                    <label>31009</label>
                    <onclick>XBMC.PlayDVD</onclick>
                    <visible>System.HasMediaDVD</visible>
                </item>
            </content>
        </control>
        <!-- Hidden elements End -->

        <!-- Main User Interface Start -->
        <!-- Background stage floor -->
        <control type="image">
            <description>Stage floor</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>720</width>
            <height>576</height>
            <aspectratio/>
            <texture>StageFloor16x9.png</texture>
        </control>
        
        <!-- Animated display of the elements available to choose from, the group below are not animated -->
        <control type="group" id="3001">
            <visible>Container(5).OnNext + !Container(5).OnPrevious</visible>
            <animation effect="slide" start="180,0" end="0,0" time="400" acceleration="+1" reversible="false">Hidden</animation>

            <!-- Focused Element (Larger)-->
            <control type="image">
                <posx>270</posx>
                <posy>165</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(0).ActualIcon</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>

            <!-- Unfocused Element (Smaller/blurred?) -->
            <control type="image">
                <posx>-90</posx>
                <posy>165</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(-2).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
            <control type="image">
                <posx>90</posx>
                <posy>180</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(-1).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
            <control type="image">
                <posx>450</posx>
                <posy>180</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(1).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
            <control type="image">
                <posx>630</posx>
                <posy>165</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(2).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
        </control>
        
        <!-- Static display of the elements available to choose from, the above group of elements are animated -->
        <control type="group">
            <visible>!Control.IsVisible(3001)</visible>
            <!-- Focused Element (Larger)-->
            <control type="image">
                <posx>270</posx>
                <posy>165</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(0).ActualIcon</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>

            <!-- Unfocused Element (Smaller/blurred?) -->
            <control type="image">
                <posx>-90</posx>
                <posy>165</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(-2).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
            <control type="image">
                <posx>90</posx>
                <posy>180</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(-1).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
            <control type="image">
                <posx>450</posx>
                <posy>180</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(1).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
            <control type="image">
                <posx>630</posx>
                <posy>165</posy>
                <width>180</width>
                <height>300</height>
                <info>Container(5).ListItem(2).Thumb</info>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>
        </control>

        <!-- Spot light overlay -->
        <control type="image">
            <description>Spot light overlay</description>
            <posx>-4</posx>
            <posy>0</posy>
            <width>724</width>
            <height>576</height>
            <aspectratio/>
            <texture>Spotlight16x9.png</texture>
        </control>

        <!-- Currently selected item's label -->
        <control type="label">
            <posx>0</posx>
            <posy>40</posy>
            <width>720</width>
            <height>40</height>
            <info>Container(5).ListItem.Label</info>
            <align>center</align>
            <aligny>center</aligny>
            <font>font20</font>
            <textcolor>button-text</textcolor>
        </control>
        <!-- Main User Interface End -->
    </controls>
</window>
