<window id="6">
	<defaultcontrol>4000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
	    <!-- Main List -->
 		<control type="list" id="4000">
			<posx>113</posx>
			<posy>133</posy>
			<height>381</height>
			<width>494</width>
			<onleft>4000</onleft>
			<onright>4000</onright>
			<onup>3001</onup>
			<ondown>3001</ondown>
			<itemlayout height="63">
				<control type="image">
					<posx>0</posx>
					<posy>13</posy>
					<width>39</width>
					<height>37</height>
					<info>ListItem.Icon</info>
					<aspectratio>keep</aspectratio>
				</control>
                <control type="image">
                    <posx>47</posx>
                    <posy>8</posy>
                    <width>425</width>
                    <height>48</height>
                    <texture>Module-List-Item-Normal.png</texture>
                </control>
				<control type="label">
					<posx>65</posx>
					<posy>8</posy>
					<width>265</width>
					<height>48</height>
					<info>ListItem.label</info>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
				</control>
			</itemlayout>
			<focusedlayout height="63">
				<control type="image">
					<posx>0</posx>
					<posy>13</posy>
					<width>39</width>
					<height>37</height>
					<info>ListItem.Icon</info>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<posx>47</posx>
					<posy>8</posy>
					<width>425</width>
					<height>48</height>
					<texture>Module-List-Item-Selected.png</texture>
					<visible>Control.HasFocus(4000)</visible>
				</control>
                <control type="image">
                    <posx>47</posx>
                    <posy>8</posy>
                    <width>425</width>
                    <height>48</height>
                    <texture>Module-List-Item-Normal.png</texture>
					<visible>!Control.HasFocus(4000)</visible>
                </control>
				<control type="label">
					<posx>65</posx>
					<posy>8</posy>
					<width>265</width>
					<height>48</height>
					<info>ListItem.label</info>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
				</control>
			</focusedlayout>
            <content>
				<item>
				 	<icon>Icons/Movies-Library.png</icon>
				 	<thumb>Icons/Movies-Library.png</thumb>
					<label>Library</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Actors.png</icon>
				 	<thumb>Icons/Movies-Actors.png</thumb>
					<label>Actors</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Directors.png</icon>
				 	<thumb>Icons/Movies-Directors.png</thumb>
					<label>Directors</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Genres.png</icon>
				 	<thumb>Icons/Movies-Genres.png</thumb>
					<label>Genres</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Playlists.png</icon>
				 	<thumb>Icons/Movies-Playlists.png</thumb>
					<label>Playlists</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Disc.png</icon>
				 	<thumb>Icons/Movies-Disc.png</thumb>
					<label>DVD</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
            </content>
		</control>

	    <!-- Spotlight -->
		<control type="image">
		    <posx>-4</posx>
		    <posy>0</posy>
		    <width>728</width>
		    <height>576</height>
		    <texture>Module-Spotlight.png</texture>
	    </control>
	    
	    <!-- Bread crumb Background -->
		<control type="image">
		    <posx>-4</posx>
		    <posy>-1</posy>
		    <width>728</width>
		    <height>84</height>
		    <aspectratio>keep</aspectratio>
		    <texture>Module-Breadcrumb-Background.png</texture>
	    </control>
	    
	    <!-- Breadcrumb Title -->
		<control type="image">
		    <posx>13</posx>
		    <posy>6</posy>
		    <width>157</width>
		    <height>47</height>
		    <aspectratio>keep</aspectratio>
		    <texture>Movies-Headline.png</texture>
	    </control>
	    
	    <!-- Breadcrumb Buttons -->
		<control type="button" id="3001">
    		<animation effect="slide" tween="bounce" time="200" delay="50" start="-150,0" end="0,0" acceleration="+1.5" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">WindowOpen</animation>
		    <posx>70</posx>
		    <posy>55</posy>
		    <width>120</width>
		    <height>28</height>
		    <aspectratio aligny="top">keep</aspectratio>
			<texturefocus>Module-Breadcrumb-Button-Movies-Selected.png</texturefocus>
			<texturenofocus>Module-Breadcrumb-Button-Movies-Normal.png</texturenofocus>
			<onleft>3000</onleft>
			<onright>3000</onright>
			<ondown>4000</ondown>
			<onup>4000</onup>
	    </control>
		<control type="button" id="3000">
    		<animation effect="slide" tween="bounce" time="200" start="-100,0" end="0,0" acceleration="+1.5" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">WindowOpen</animation>
		    <posx>-15</posx>
		    <posy>55</posy>
		    <width>120</width>
		    <height>28</height>
		    <aspectratio aligny="top">keep</aspectratio>
			<texturefocus>Module-Breadcrumb-Button-MainMenu-Selected.png</texturefocus>
			<texturenofocus>Module-Breadcrumb-Button-MainMenu-Normal.png</texturenofocus>
			<onleft>3001</onleft>
			<onright>3001</onright>
			<ondown>4000</ondown>
			<onup>4000</onup>
	    </control>
	</controls>
</window>  