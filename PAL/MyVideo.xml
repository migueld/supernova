<window id="6">
	<defaultcontrol always="true">4000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
	    <!-- Main List -->
 		<control type="list" id="4000">
            <animation effect="fade" time="800" delay="400" start="0" end="100" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">WindowOpen</animation>
            <pulseonselect>yes</pulseonselect>
            
			<posx>113</posx>
			<posy>133</posy>
			<height>381</height>
			<width>494</width>
			<onleft>4000</onleft>
			<onright>4000</onright>
			<onup>3000</onup>
			<ondown>3000</ondown>
			<itemlayout height="63">
				<control type="image">
					<posx>0</posx>
					<posy>13</posy>
					<width>39</width>
					<height>37</height>
					<info>ListItem.Icon</info>
					<aspectratio>keep</aspectratio>
				</control>
                <control type="image">
                    <posx>47</posx>
                    <posy>8</posy>
                    <width>425</width>
                    <height>48</height>
                    <texture>Module-List-Item-Normal.png</texture>
                </control>
				<control type="label">
					<posx>65</posx>
					<posy>8</posy>
					<width>265</width>
					<height>48</height>
					<info>ListItem.label</info>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
				</control>
			</itemlayout>
			<focusedlayout height="63">
				<control type="image">
					<posx>0</posx>
					<posy>13</posy>
					<width>39</width>
					<height>37</height>
					<info>ListItem.Icon</info>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<posx>47</posx>
					<posy>8</posy>
					<width>425</width>
					<height>48</height>
					<texture>Module-List-Item-Selected.png</texture>
					<visible>Control.HasFocus(4000)</visible>
				</control>
                <control type="image">
                    <posx>47</posx>
                    <posy>8</posy>
                    <width>425</width>
                    <height>48</height>
                    <texture>Module-List-Item-Normal.png</texture>
					<visible>!Control.HasFocus(4000)</visible>
                </control>
				<control type="label">
					<posx>65</posx>
					<posy>8</posy>
					<width>265</width>
					<height>48</height>
					<info>ListItem.label</info>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
				</control>
			</focusedlayout>
            <content>
				<item>
				 	<icon>Icons/Movies-Library.png</icon>
				 	<thumb>Icons/Movies-Library.png</thumb>
					<label>Library</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Actors.png</icon>
				 	<thumb>Icons/Movies-Actors.png</thumb>
					<label>Actors</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Directors.png</icon>
				 	<thumb>Icons/Movies-Directors.png</thumb>
					<label>Directors</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Genres.png</icon>
				 	<thumb>Icons/Movies-Genres.png</thumb>
					<label>Genres</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Playlists.png</icon>
				 	<thumb>Icons/Movies-Playlists.png</thumb>
					<label>Playlists</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
				</item>
				<item>
				 	<icon>Icons/Movies-Disc.png</icon>
				 	<thumb>Icons/Movies-Disc.png</thumb>
					<label>DVD</label>
					<onclick>ActivateWindow(MyVideoFiles)</onclick>
					<visible>System.HasMediaDVD</visible>
				</item>
            </content>
		</control>

	    <!-- Spotlight -->
		<control type="image">
		    <posx>-4</posx>
		    <posy>0</posy>
		    <width>728</width>
		    <height>576</height>
		    <texture>Module-Spotlight.png</texture>
	    </control>
	    
	    <!-- Breadcrumb and Title -->
	    <control type="group">
    	    <!-- Breadcrumb Background -->
    	    <control type="image">
    	        <animation effect="slide" time="400" delay="100" start="0,-30" end="0,0" tween="cubic" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">WindowOpen</animation>
    	        <posx>-4</posx>
    	        <posy>55</posy>
    	        <width>727</width>
    	        <height>47</height>
    	        <texture>Module-Breadcrumb-Background.png</texture>
            </control>

    		<control type="group">
    		    <animation type="WindowOpen" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">
                    <effect type="fade" time="100" delay="0" start="0" end="100" />
                    <effect type="slide" time="300" delay="0" start="0,-10" end="0,0" tween="cubic"/>
		        </animation>
    	        <!-- Top edging -->
    	        <control type="image">
    	            <posx>-4</posx>
    	            <posy>0</posy>
    	            <width>728</width>
    	            <height>6</height>
        		    <texture>Module-Window-Title-Edging.png</texture>
    		    </control>
		    
    		    <!-- Title background -->
                <control type="image">
                    <posx>-4</posx>
                    <posy>6</posy>
                    <width>728</width>
                    <height>56</height>
                    <texture>Module-Window-Title-Background.png</texture>
                </control>
            </control>

            <!-- Title text -->
    		<control type="image">
    		    <animation type="WindowOpen" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">
                    <effect type="fade" time="100" delay="150" start="0" end="100" />
                    <effect type="slide" time="300" delay="150" start="-50,0" end="0,0" tween="cubic"/>
		        </animation>
    		    <posx>13</posx>
    		    <posy>6</posy>
    		    <width>157</width>
    		    <height>47</height>
    		    <aspectratio>keep</aspectratio>
    		    <texture>Movies-Headline.png</texture>
    	    </control>

    	    <!-- Breadcrumb Buttons -->
    		<control type="image">
                <animation effect="slide" tween="cubic" time="600" delay="400" start="-105,0" end="0,0" acceleration="+1.5" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">WindowOpen</animation>
    		    <posx>85</posx>
    		    <posy>55</posy>
    		    <width>94</width>
    		    <height>27</height>
                <!-- 250x50 = 94x27 -->
				<hitrect x="90" y="55" w="78" h="28" />
    		    <aspectratio aligny="top">keep</aspectratio>
    			<texture>Module-Breadcrumb-Button-Movies-Normal.png</texture>
    	    </control>
    	    
    		<control type="button" id="3000">
                <animation effect="slide" tween="cubic" time="600" delay="200" start="-100,0" end="0,0" acceleration="+1.5" condition="[!Skin.HasSetting(animated) + !Skin.HasSetting(tween_animated)]">WindowOpen</animation>
                <pulseonselect>no</pulseonselect>
    		    <posx>-4</posx>
    		    <posy>55</posy>
    		    <width>105</width> 
    		    <height>27</height>
                <!-- 280x50 = 105x27-->
				<hitrect x="0" y="55" w="90" h="28" />
    		    <aspectratio aligny="top">keep</aspectratio>
    			<texturefocus>Module-Breadcrumb-Button-MainMenu-Selected.png</texturefocus>
    			<texturenofocus>Module-Breadcrumb-Button-MainMenu-Normal.png</texturenofocus>
    			<onclick>ActivateWindow(0)</onclick>
    			<onleft>3000</onleft>
    			<onright>3000</onright>
    			<ondown>4000</ondown>
    			<onup>4000</onup>
    	    </control>
	    </control>
	</controls>
</window>  