<window id="6">
	<defaultcontrol always="true">4000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
	    <!-- Spotlight -->
        <include>module-spotlight</include>
	    
	    <!-- Breadcrumb and Title -->
	    <control type="group">
            <include>module-title-and-breadcrumb-background</include>

            <!-- Title text -->
            <control type="group">
                <!-- Movies Headline -->
        		<control type="image">
        		    <posx>13</posx>
        		    <posy>6</posy>
        		    <width>157</width>
        		    <height>47</height>
        		    <aspectratio>keep</aspectratio>
        		    <texture>Movies-Headline.png</texture>
        	    </control>
    	    </control>

    	    <!-- Breadcrumb Buttons -->
       	    <!-- 1 Position: Movies Menu | TV Menu | Music Menu -->
    		<control type="button" id="3002">
                <animation effect="slide" tween="cubic" time="600" start="-105,0" end="0,0" acceleration="+1.5">WindowOpen</animation>
                <pulseonselect>no</pulseonselect>
    		    <posx>160</posx>
    		    <posy>55</posy>
    		    <width>94</width>
    		    <height>27</height>
				<hitrect x="90" y="55" w="78" h="28" />
    		    <aspectratio aligny="top">keep</aspectratio>
    			<texturefocus>Module-Breadcrumb-Button-Movies-Selected.png</texturefocus>
    			<texturenofocus>Module-Breadcrumb-Button-Movies-Normal.png</texturenofocus>
    			<onclick>ActivateWindow(50)</onclick>
    			<onleft>3000</onleft>
    			<onright>3002</onright>
    			<onup>4000</onup>
    			<ondown>4000</ondown>
    			<enabled>Control.Visible(4000)</enabled>
    	    </control>
    	    <!-- 1 Position: Movies Menu | TV Menu | Music Menu -->

    	    <!-- 1 Position: Movies Menu | TV Menu | Music Menu -->
    		<control type="button" id="3001">
                <pulseonselect>no</pulseonselect>
    		    <posx>85</posx>
    		    <posy>55</posy>
    		    <width>94</width>
    		    <height>27</height>
				<hitrect x="90" y="55" w="78" h="28" />
    		    <aspectratio aligny="top">keep</aspectratio>
    			<texturefocus>Module-Breadcrumb-Button-Movies-Selected.png</texturefocus>
    			<texturenofocus>Module-Breadcrumb-Button-Movies-Normal.png</texturenofocus>
    			<onclick>ActivateWindow(50)</onclick>
    			<onleft>3000</onleft>
    			<onright>3002</onright>
    			<onup>4000</onup>
    			<ondown>4000</ondown>
    			<enabled>Control.Visible(4000)</enabled>
    	    </control>
    	    <!-- 1 Position: Movies Menu | TV Menu | Music Menu -->
    	    
    	    <!-- 0 Position: Main Menu-->
    		<control type="button" id="3000">
                <pulseonselect>no</pulseonselect>
    		    <posx>0</posx>
    		    <posy>55</posy>
    		    <width>105</width> 
    		    <height>27</height>
				<hitrect x="0" y="55" w="90" h="28" />
    		    <aspectratio aligny="top">keep</aspectratio>
    			<texturefocus>Module-Breadcrumb-Button-MainMenu-Selected.png</texturefocus>
    			<texturenofocus>Module-Breadcrumb-Button-MainMenu-Normal.png</texturenofocus>
    			<onclick>ActivateWindow(0)</onclick>
    			<onleft>3000</onleft>
    			<onright>3000</onright>
    			<ondown>4000</ondown>
    			<onup>4000</onup>
    	    </control>
    	    <!-- 0 Position: Main Menu-->
	    </control>
	</controls>
</window>  